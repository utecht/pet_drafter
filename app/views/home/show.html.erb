<% if user_signed_in? %>
  <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
  <% if @character %>
    <p>
      <%= @character.name %>
      <%= @character.server %>
      <%= @character.region %>
    </p>
    <%= link_to 'Teams', teams_path %>
    <%= link_to 'Update Pets', '/update' %>
    <%= link_to 'Find a game', :lobbies %>
    <h1>Pets</h1>
    <table>
        <tr>
            <th>Name</th>
            <th>Level</th>
        </tr>
        <% @pets.each do |p| %>
        <tr>
            <td><a href="http://www.wowhead.com/npc=<%=p.speciesId%>"><%=p.name%></a></td>
            <td><%=p.level%></td>
        </tr>
        <% end %>
    </table>
<% else %>
  <%= link_to 'New Character', 'characters/new' %>
<% end %>
<% else %>
  <li><%= link_to('Login', new_user_session_path) %></li>
<% end %>
